<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/title_bar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/tab_search_content_padding"
            android:padding="@dimen/tab_search_content_padding"
            android:background="@drawable/blk_update_bg">
        <ImageView android:id="@+id/icon_express_company"
                   android:layout_height="@dimen/main_title_height"
                   android:layout_width="wrap_content"
                   android:scaleType="centerInside"
                   android:src="@drawable/logo_express"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">
            <TextView android:id="@+id/express_company"
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:singleLine="true"
                      android:textStyle="bold"
                      android:textSize="@dimen/express_search_button_text_size"/>
            <TextView android:id="@+id/express_code"
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:singleLine="true"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/tab_search_content_padding"
            android:background="@drawable/complaint_card_normal"
            android:layout_height="0dp"
            android:layout_weight="1">
        <ListView android:id="@+id/express_search_listview"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>